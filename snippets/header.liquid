<header class="header-nav">
    <div class="logo-container">
        <a href="/">
            <img
                    class="logo-img"
                    width="auto"
                    height="60"
                    loading="lazy"
                    src="{{ 'logofull.png' | asset_url }}"
                    alt="Logo"
            >
        </a>
    </div>

    <nav class="middle-nav">
        <ul class="middle-nav-links">
            {% for link in linklists['main-menu'].links %}
                <li>{{ link.title | link_to: link.url }}</li>
            {% endfor %}
        </ul>
    </nav>

    <div class="right-nav-items">
        <form action="/search" class="search-form">
            <input class="search-nav" placeholder="Search" type="search">
        </form>

        <a href="/cart" class="cart-link">
            <img
                    class="shopping-img"
                    width="40"
                    height="40"
                    loading="lazy"
                    src="{{ 'd.png' | asset_url }}"
                    alt="Cart"
            >
        </a>
    </div>
</header>

<style>
    .header-nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: #ffffff;
        padding: 10px 30px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .logo-container {
        flex: 1;
    }

    .logo-img {
        height: 60px;
        width: auto;
    }

    .middle-nav {
        flex: 2;
        display: flex;
        justify-content: center;
    }

    .middle-nav-links {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
    }

    .middle-nav-links li {
        margin: 0 15px;
    }

    .middle-nav-links a {
        text-decoration: none;
        color: #333333;
        font-weight: bold;
        font-size: 18px;
        transition: color 0.3s ease;
    }

    .middle-nav-links a:hover {
        color: #111111FF;
    }

    .right-nav-items {
        flex: 1;
        display: flex;
        justify-content: flex-end;
        align-items: center;
    }

    .search-form {
        display: flex;
        align-items: center;
        height: 100%; /* Ensure the form takes full height */
    }

    .search-nav {
        padding: 10px;
        border-radius: 20px;
        border: 1px solid #e0e0e0;
        background-color: #f5f5f5;
        font-size: 14px;
        transition: border-color 0.3s ease;
    }

    .search-nav:focus {
        outline: none;
        border-color: #111111;
    }

    .shopping-img {
        cursor: pointer;
    }
</style>

