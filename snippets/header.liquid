<header class="header-nav">
    <div>
        <a href="/">
            <img
                    width="auto"
                    height="50px"
                    loading="lazy"
                    src="{{ 'logofull.png' | asset_url }}"
            />
        </a>
    </div>
    <div class="middle-nav-links">
        {% for link in linklists['main-menu'].links %}
            <li>{{ link.title | link_to: link.url }}</li>
        {% endfor %}
    </div>
    <div class="right-nav-items">
        <form action="/search">
            <input class="search-nav" placeholder="search" type="search">
        </form>
        <a href="/">
            <img
                    width="40"
                    height="40"
                    loading="lazy"
                    src="{{ 'logo.png' | asset_url }}"
            />
        </a>
    </div>
</header>

<style>
    .header-nav {
        display: flex;
        justify-content: space-between;
        margin: 0;
        padding: 0 30px 0 30px;
        background-color: white;
        align-items: center;
    }

    .middle-nav-bar {
        display: flex;
    }

    .middle-nav-links {
        display: flex;
        font-size: 17px;
        font-weight: 600;
    }

    .middle-nav-links li {
        padding: 10px;
        list-style-type: none;
    }

    .middle-nav-links a {
        color: inherit;
        text-decoration: none;
    }

    .middle-nav-links li:hover {
        text-decoration: underline;
    }


    .right-nav-items {
        display: flex;
        align-items: center;
    }

    .search-nav {
        padding: 10px;
        margin-top: 15px;
        border-radius: 10px;
        border: none;
        background-color: rgb(229, 228, 228);
    }
</style>